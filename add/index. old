    <script>
        let tg = null;
        let user = null;
        let currentUser = null;

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Telegram Mini App
        async function initTelegramApp() {
            try {
                tg = window.Telegram.WebApp;
                tg.expand();
                tg.enableClosingConfirmation();
                
                user = tg.initDataUnsafe?.user;
                console.log('üë§ –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å Telegram:', user);
                
                // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ñ–æ–Ω –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –≤—Ä–µ–º–µ–Ω–∏
                setBackgroundByTime();
                
                // –ü—Ä–æ–≤–µ—Ä—è–µ–º –µ—Å—Ç—å –ª–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å
                const savedUser = localStorage.getItem('mamaRyadomUser');
                if (savedUser) {
                    currentUser = JSON.parse(savedUser);
                    console.log('‚úÖ –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω:', currentUser);
                    
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –≤ –±–∞–∑–µ
                    await checkUserInDatabase();
                    showMainScreen();
                } else {
                    showScreen('registrationScreen');
                    if (user) {
                        document.getElementById('regStatus').innerHTML = `
                            –ü—Ä–∏–≤–µ—Ç, ${user.first_name}! üëã<br>
                            <small>–ó–∞–ø–æ–ª–Ω–∏ –ø—Ä–æ—Ñ–∏–ª—å —á—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å</small>
                        `;
                    }
                }
                
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏:', error);
                showScreen('registrationScreen');
            }
        }

        // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Ñ–æ–Ω–∞ –ø–æ –≤—Ä–µ–º–µ–Ω–∏
        function setBackgroundByTime() {
            const background = document.getElementById('background');
            const now = new Date();
            const hour = now.getHours();
            
            let backgroundUrl;
            if (hour >= 6 && hour < 22) {
                // –î–Ω–µ–≤–Ω–æ–π —Ñ–æ–Ω (6:00 - 22:00)
                backgroundUrl = 'https://i.postimg.cc/BZ5RKvBr/1762526374.png';
            } else {
                // –ù–æ—á–Ω–æ–π —Ñ–æ–Ω (22:00 - 6:00)
                backgroundUrl = 'https://i.postimg.cc/7Z5BmPSy/1762867571.png';
            }
            
            background.innerHTML = `<img src="${backgroundUrl}" alt="Background">`;
        }

        // –ü–æ–ª—É—á–µ–Ω–∏–µ –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏—è –ø–æ –≤—Ä–µ–º–µ–Ω–∏
        function getTimeGreeting() {
            const now = new Date();
            const hour = now.getHours();
            
            if (hour >= 6 && hour < 12) return '–î–æ–±—Ä–æ–µ —É—Ç—Ä–æ';
            if (hour >= 12 && hour < 18) return '–î–æ–±—Ä—ã–π –¥–µ–Ω—å';
            if (hour >= 18 && hour < 22) return '–î–æ–±—Ä—ã–π –≤–µ—á–µ—Ä';
            return '–î–æ–±—Ä–æ–π –Ω–æ—á–∏';
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö
        async function checkUserInDatabase() {
            try {
                // –ó–¥–µ—Å—å –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –ø—Ä–æ–≤–µ—Ä–∫—É –≤ –±–∞–∑—É –¥–∞–Ω–Ω—ã—Ö
                // –ü–æ–∫–∞ –ø—Ä–æ—Å—Ç–æ –∏—Å–ø–æ–ª—å–∑—É–µ–º –ª–æ–∫–∞–ª—å–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
                console.log('‚úÖ –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–Ω:', currentUser.nickname);
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –ø—Ä–æ–≤–µ—Ä–∫–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è:', error);
            }
        }

        // –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        async function registerUser(userData) {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.textContent = '–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è...';
            
            try {
                showStatus('–°–æ—Ö—Ä–∞–Ω—è–µ–º –¥–∞–Ω–Ω—ã–µ...', 'info');
                
                const response = await fetch('/api/save-user', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(userData)
                });
                
                const result = await response.json();
                console.log('‚úÖ –†–µ–∑—É–ª—å—Ç–∞—Ç —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è:', result);
                
                if (result.success) {
                    currentUser = {
                        ...userData,
                        first_name: user?.first_name || '–ú–∞–º–∞',
                        registered: true
                    };
                    
                    localStorage.setItem('mamaRyadomUser', JSON.stringify(currentUser));
                    showStatus('‚úÖ –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è —É—Å–ø–µ—à–Ω–∞!', 'success');
                    
                    setTimeout(() => {
                        showMainScreen();
                    }, 1500);
                } else {
                    throw new Error(result.error || '–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è');
                }
                
            } catch (error) {
                console.error('‚ùå –û—à–∏–±–∫–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏:', error);
                
                // –ï—Å–ª–∏ API –Ω–µ —Ä–∞–±–æ—Ç–∞–µ—Ç - —Å–æ—Ö—Ä–∞–Ω—è–µ–º –ª–æ–∫–∞–ª—å–Ω–æ
                currentUser = {
                    ...userData,
                    first_name: user?.first_name || '–ú–∞–º–∞',
                    registered: true,
                    localSave: true
                };
                
                localStorage.setItem('mamaRyadomUser', JSON.stringify(currentUser));
                showStatus('‚úÖ –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è —É—Å–ø–µ—à–Ω–∞!', 'success');
                
                setTimeout(() => {
                    showMainScreen();
                }, 1500);
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'üöÄ –ù–∞—á–∞—Ç—å –ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è';
            }
        }

        // –ü–æ–∫–∞–∑ —ç–∫—Ä–∞–Ω–æ–≤
        function showScreen(screenId) {
            document.querySelectorAll('.screen').forEach(screen => {
                screen.classList.remove('active');
            });
            document.getElementById(screenId).classList.add('active');
        }

        function showMainScreen() {
            if (currentUser) {
                const greeting = getTimeGreeting();
                document.getElementById('timeGreeting').textContent = `${greeting}, ${currentUser.nickname}!`;
                document.getElementById('welcomeMessage').textContent = '–ö–∞–∫ —Ö–æ—Ä–æ—à–æ, —á—Ç–æ –≤—ã –∑–∞—à–ª–∏, —á—Ç–æ–±—ã –Ω–∞–π—Ç–∏ –∫–æ–º–ø–∞–Ω–∏—é –¥–ª—è –ø—Ä–æ–≥—É–ª–∫–∏';
            }
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –æ—Å–Ω–æ–≤–Ω—ã–µ –∫–Ω–æ–ø–∫–∏
            document.getElementById('mainButtons').style.display = 'grid';
            document.getElementById('walkButtons').style.display = 'none';
            
            showScreen('mainScreen');
        }

        function showStatus(message, type) {
            const statusEl = document.getElementById('regStatus');
            statusEl.textContent = message;
            statusEl.className = `status ${type}`;
        }

        // –ù–∞–≤–∏–≥–∞—Ü–∏—è –ø–æ —Ä–∞–∑–¥–µ–ª–∞–º
        function showWalkSection() {
            document.getElementById('mainButtons').style.display = 'none';
            document.getElementById('walkButtons').style.display = 'flex';
        }

        function backToMain() {
            document.getElementById('mainButtons').style.display = 'grid';
            document.getElementById('walkButtons').style.display = 'none';
        }

        function showNannySection() {
            alert('üë∂ –†–∞–∑–¥–µ–ª "–ù—è–Ω—è" –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ üöß');
        }

        function showSettings() {
            alert('‚öôÔ∏è –†–∞–∑–¥–µ–ª "–ù–∞—Å—Ç—Ä–æ–π–∫–∏" –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ üöß');
        }

        function findMoms() {
            alert('üö∂‚Äç‚ôÄÔ∏è –§—É–Ω–∫—Ü–∏—è "–ò–¥–µ–º –≥—É–ª—è—Ç—å" –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ üöß');
        }

        function searchMoms() {
            alert('üîç –§—É–Ω–∫—Ü–∏—è "–ù–∞–π—Ç–∏ –º–∞–º—É" –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ üöß');
        }

        function showLocations() {
            alert('üìç –§—É–Ω–∫—Ü–∏—è "–õ–æ–∫–∞—Ü–∏–∏" –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ üöß');
        }

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Ñ–æ—Ä–º—ã —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏
        document.getElementById('registrationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                userId: user?.id || Math.floor(Math.random() * 1000000),
                nickname: document.getElementById('nickname').value,
                city: document.getElementById('city').value,
                children: document.getElementById('children').value
            };
            
            if (!formData.nickname || !formData.city || !formData.children) {
                showStatus('‚ùå –ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è', 'error');
                return;
            }
            
            registerUser(formData);
        });

        // –ó–∞–ø—É—Å–∫ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(initTelegramApp, 500);
        });

        // –ì–ª–æ–±–∞–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ –¥–ª—è –∫–Ω–æ–ø–æ–∫
        window.showWalkSection = showWalkSection;
        window.showNannySection = showNannySection;
        window.showSettings = showSettings;
        window.findMoms = findMoms;
        window.searchMoms = searchMoms;
        window.showLocations = showLocations;
        window.backToMain = backToMain;
    </script>
</body>
